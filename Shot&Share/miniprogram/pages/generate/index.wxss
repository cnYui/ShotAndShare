/**generate.wxss**/

page {
  background-color: #f8f9fa;
  padding-bottom: 120rpx;
}

/* 上传区域 */
.upload-section {
  margin-bottom: 32rpx;
}

.upload-area {
  background: #fff;
  border: 2rpx dashed #dee2e6;
  border-radius: 16rpx;
  padding: 80rpx 32rpx;
  text-align: center;
  margin: 0 32rpx;
  transition: all 0.3s ease;
}

.upload-area:active {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.02);
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  opacity: 0.6;
}

.upload-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.upload-desc {
  font-size: 24rpx;
  color: #999;
}

/* 多图片预览 */
.images-preview {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 0 32rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
}

.images-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.image-item .preview-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.image-remove {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.add-image-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #dee2e6;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
}

.add-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 24rpx;
  color: #999;
}

.image-actions {
  display: flex;
  gap: 16rpx;
}

.image-actions .btn {
  flex: 1;
  margin-bottom: 0;
}

/* 单图片预览（兼容） */
.image-preview {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 0 32rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
}

.image-preview .preview-image {
  width: 100%;
  max-height: 500rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

/* 描述区域 */
.description-section {
  margin-bottom: 32rpx;
}

.input-group {
  position: relative;
  margin: 0 32rpx;
}

.textarea {
  width: 100%;
  min-height: 160rpx;
  background: #fff;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  line-height: 1.5;
  box-sizing: border-box;
}

.textarea:focus {
  border-color: #667eea;
  outline: none;
}

.char-count {
  position: absolute;
  bottom: 12rpx;
  right: 16rpx;
  font-size: 20rpx;
  color: #999;
  background: rgba(255, 255, 255, 0.9);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

/* 风格选择区域 */
.style-section {
  margin-bottom: 32rpx;
}

.style-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  padding: 0 32rpx;
}

.style-card {
  background: #fff;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 24rpx;
  position: relative;
  transition: all 0.3s ease;
  min-height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.style-card:active {
  transform: scale(0.98);
}

.style-card.selected {
  border-color: #667eea;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
}

.style-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.style-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

.style-check {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 32rpx;
  height: 32rpx;
  background: #667eea;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
}

/* 生成按钮区域 */
.generate-section {
  margin-bottom: 32rpx;
  padding: 0 32rpx;
}

.generate-btn {
  width: 100%;
  height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
  position: relative;
  overflow: hidden;
}

.generate-btn.loading {
  background: linear-gradient(135deg, #adb5bd 0%, #6c757d 100%);
}

.generate-btn:disabled {
  background: #f8f9fa;
  color: #adb5bd;
  border: 2rpx solid #e9ecef;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 结果区域 */
.result-section {
  margin-bottom: 32rpx;
}

.copywriting-list {
  padding: 0 32rpx;
}

.copywriting-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
  border-left: 4rpx solid #667eea;
}

/* 文案标题 */
.copywriting-header {
  margin-bottom: 16rpx;
}

.copywriting-number {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 600;
  background: rgba(102, 126, 234, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.copywriting-content {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 16rpx;
  word-break: break-all;
}

.copywriting-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 24rpx;
}

.copywriting-tags .tag {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
}

.copywriting-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  flex: 1;
  padding: 16rpx 8rpx;
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  font-size: 24rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.copy-btn:active {
  background: rgba(102, 126, 234, 0.1);
  border-color: #667eea;
  color: #667eea;
}

.save-btn:active {
  background: rgba(40, 167, 69, 0.1);
  border-color: #28a745;
  color: #28a745;
}

.share-btn:active {
  background: rgba(255, 193, 7, 0.1);
  border-color: #ffc107;
  color: #e0a800;
}

/* 空结果 */
.empty-result {
  text-align: center;
  padding: 80rpx 32rpx;
  margin: 0 32rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
}

/* 结果操作按钮 */
.result-actions {
  display: flex;
  gap: 16rpx;
  padding: 0 32rpx;
}

.result-actions .btn {
  flex: 1;
  margin-bottom: 0;
}

/* 使用提示 */
.tips-section {
  margin-bottom: 32rpx;
}

.tips-list {
  padding: 0 32rpx;
}

.tip-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 1rpx 8rpx rgba(0, 0, 0, 0.03);
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .style-grid {
    grid-template-columns: 1fr;
  }
  
  .upload-area {
    padding: 60rpx 24rpx;
    margin: 0 24rpx;
  }
  
  .image-preview,
  .input-group,
  .copywriting-list,
  .generate-section,
  .result-actions,
  .tips-list {
    margin: 0 24rpx;
    padding: 0 24rpx;
  }
  
  .style-grid {
    padding: 0 24rpx;
  }
  
  .section-title {
    margin: 0 24rpx 20rpx;
  }
  
  .copywriting-actions {
    flex-direction: column;
    gap: 8rpx;
  }
  
  .action-btn {
    flex: none;
  }
}