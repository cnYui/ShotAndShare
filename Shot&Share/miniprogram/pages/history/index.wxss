/**history.wxss**/

page {
  background-color: #f8f9fa;
}

/* 头部操作栏 */
.header-bar {
  background: #fff;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.action-btn:active {
  background: #e9ecef;
  transform: scale(0.95);
}

.action-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
}

/* 统计信息栏 */
.stats-bar {
  background: #fff;
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stats-text {
  font-size: 26rpx;
  color: #666;
}

.filter-text {
  font-size: 24rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

/* 记录列表 */
.records-list {
  padding: 32rpx;
}

.record-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.record-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 记录头部 */
.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 24rpx 16rpx;
  border-bottom: 2rpx solid #f8f9fa;
}

.record-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.record-style {
  font-size: 24rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.record-time {
  font-size: 22rpx;
  color: #999;
}

.record-actions {
  display: flex;
  gap: 8rpx;
}

.action-btn-small {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.action-btn-small:active {
  background: #e9ecef;
  transform: scale(0.9);
}

.action-btn-small.delete {
  background: rgba(220, 53, 69, 0.1);
}

.action-btn-small.delete:active {
  background: rgba(220, 53, 69, 0.2);
}

.action-icon-small {
  font-size: 24rpx;
}

/* 图片预览 */
.record-image {
  padding: 0 24rpx;
  margin-bottom: 16rpx;
}

.preview-image {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

/* 文案内容 */
.record-content {
  padding: 0 24rpx 16rpx;
}

.content-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 标签 */
.record-tags {
  padding: 0 24rpx 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  font-size: 22rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

/* 记录底部 */
.record-footer {
  padding: 16rpx 24rpx 24rpx;
  border-top: 2rpx solid #f8f9fa;
}

.footer-info {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.info-item {
  font-size: 22rpx;
  color: #999;
  display: flex;
  align-items: center;
}

/* 加载更多 */
.load-more {
  padding: 32rpx;
  text-align: center;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

.load-more-btn {
  padding: 24rpx 48rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #666;
  display: inline-block;
  transition: all 0.3s ease;
}

.load-more-btn:active {
  background: #e9ecef;
  transform: scale(0.95);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
  margin-bottom: 48rpx;
}

.empty-actions {
  display: flex;
  justify-content: center;
}

/* 全局加载状态 */
.global-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .header-bar {
    padding: 24rpx;
  }
  
  .header-title {
    font-size: 32rpx;
  }
  
  .records-list {
    padding: 24rpx;
  }
  
  .record-item {
    margin-bottom: 20rpx;
  }
  
  .record-header {
    padding: 20rpx 20rpx 12rpx;
  }
  
  .record-image {
    padding: 0 20rpx;
  }
  
  .record-content {
    padding: 0 20rpx 12rpx;
  }
  
  .record-tags {
    padding: 0 20rpx 12rpx;
  }
  
  .record-footer {
    padding: 12rpx 20rpx 20rpx;
  }
  
  .preview-image {
    height: 240rpx;
  }
  
  .content-text {
    font-size: 26rpx;
    -webkit-line-clamp: 3;
  }
  
  .empty-state {
    padding: 80rpx 24rpx;
  }
  
  .empty-icon {
    font-size: 100rpx;
  }
}