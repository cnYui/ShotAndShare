/* pages/chat/chat.wxss */
.container {
  min-height: 100vh;
  background-color: #F7F7F5;
  display: flex;
  flex-direction: column;
  max-width: 100vw;
  overflow-x: hidden;
  box-sizing: border-box;
}

/* Â§¥ÈÉ® */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background-color: #FFFFFF;
  border-radius: 0 0 48rpx 48rpx;
  margin-bottom: 32rpx;
  box-sizing: border-box;
}

.title-section {
  flex: 1;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 24rpx;
}

.pet-avatar {
  position: relative;
}

.avatar-image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

.pet-status {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  color: #FFFFFF;
}

.pet-status.happy {
  background-color: #4CAF50;
}

.pet-status.normal {
  background-color: #2196F3;
}

.pet-status.sad {
  background-color: #F44336;
}

.status-text {
  font-size: 20rpx;
}

/* ËÅäÂ§©ÂÜÖÂÆπ */
.chat-content {
  flex: 1;
  padding: 0 32rpx;
  margin-bottom: 32rpx;
  box-sizing: border-box;
}

.chat-date {
  display: flex;
  justify-content: center;
  margin: 32rpx 0;
}

.date-text {
  padding: 8rpx 24rpx;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #7D7D7B;
}

.message-list {
  display: flex;
  flex-direction: column;
}

.message-item {
  display: flex;
  margin-bottom: 32rpx;
  align-items: flex-start;
}

.message-item.pet {
  align-self: flex-start;
}

.message-item.user {
  align-self: flex-end;
  flex-direction: row-reverse;
}

.message-avatar {
  margin: 0 16rpx;
}

.message-content {
  max-width: 70%;
  word-wrap: break-word;
  word-break: break-all;
}

.chat-bubble {
  padding: 24rpx;
  border-radius: 24rpx;
  margin-bottom: 8rpx;
  position: relative;
}

.chat-bubble-pet {
  background-color: #FFFFFF;
  border-top-left-radius: 4rpx;
}

.chat-bubble-pet::before {
  content: '';
  position: absolute;
  left: -16rpx;
  top: 16rpx;
  border-width: 8rpx;
  border-style: solid;
  border-color: transparent #FFFFFF transparent transparent;
}

.chat-bubble-user {
  background-color: #FE5933;
  border-top-right-radius: 4rpx;
}

.chat-bubble-user::before {
  content: '';
  position: absolute;
  right: -16rpx;
  top: 16rpx;
  border-width: 8rpx;
  border-style: solid;
  border-color: transparent transparent transparent #FE5933;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.4;
  color: #302E2D;
}

.chat-bubble-user .message-text {
  color: #FFFFFF;
}

.message-time {
  font-size: 20rpx;
  color: #7D7D7B;
  text-align: right;
}

/* Ê≠£Âú®ËæìÂÖ•ÊèêÁ§∫ */
.typing-indicator {
  display: flex;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.typing-avatar {
  margin-right: 16rpx;
}

.typing-bubble {
  padding: 24rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  border-top-left-radius: 4rpx;
  position: relative;
}

.typing-bubble::before {
  content: '';
  position: absolute;
  left: -16rpx;
  top: 16rpx;
  border-width: 8rpx;
  border-style: solid;
  border-color: transparent #FFFFFF transparent transparent;
}

.typing-dots {
  display: flex;
  gap: 8rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #7D7D7B;
  animation: typing 1.5s infinite ease-in-out;
}

.dot:nth-child(1) {
  animation-delay: 0s;
}

.dot:nth-child(2) {
  animation-delay: 0.3s;
}

.dot:nth-child(3) {
  animation-delay: 0.6s;
}

@keyframes typing {
  0%, 60%, 100% {
    transform: translateY(0);
    opacity: 0.6;
  }
  30% {
    transform: translateY(-8rpx);
    opacity: 1;
  }
}

/* ËæìÂÖ•Âå∫Âüü */
.input-area {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: #FFFFFF;
  border-radius: 48rpx 48rpx 0 0;
  box-sizing: border-box;
}

.input-actions {
  margin-right: 16rpx;
}

.action-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #F7F7F5;
  border-radius: 50%;
}

.input-box {
  flex: 1;
  background-color: #F7F7F5;
  border-radius: 32rpx;
  padding: 0 24rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
}

.text-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
}

.voice-input-box {
  flex: 1;
  height: 80rpx;
}

.voice-btn {
  width: 100%;
  height: 100%;
  background-color: #F7F7F5;
  border-radius: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #7D7D7B;
  padding: 0;
  margin: 0;
}

.send-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #F7F7F5;
  border-radius: 50%;
  margin-left: 16rpx;
  transition: all 0.3s ease;
}

.send-btn.active {
  background-color: #FE5933;
  color: #FFFFFF;
}

/* Âø´Êç∑ÂõûÂ§ç */
.quick-replies {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  background-color: #FFFFFF;
  border-top: 1rpx solid #F0F0F0;
  box-sizing: border-box;
}

.quick-reply-item {
  padding: 16rpx 24rpx;
  background-color: #F7F7F5;
  border-radius: 32rpx;
  font-size: 24rpx;
  color: #302E2D;
}

/* ÂΩïÈü≥Âä®Áîª */
.recording-indicator {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.recording-inner {
  width: 300rpx;
  height: 300rpx;
  background-color: rgba(0, 0, 0, 0.7);
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.recording-icon {
  width: 120rpx;
  height: 120rpx;
  background-color: #FE5933;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 24rpx;
  animation: pulse 1.5s infinite;
}

.recording-icon .iconfont {
  font-size: 64rpx;
  color: #FFFFFF;
}

.recording-text {
  font-size: 28rpx;
  color: #FFFFFF;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.8;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

