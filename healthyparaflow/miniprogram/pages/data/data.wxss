/* pages/data/data.wxss */
.container {
  min-height: 100vh;
  background-color: #F7F7F5;
  position: relative;
  max-width: 100vw;
  overflow-x: hidden;
  box-sizing: border-box;
}

/* Â§¥ÈÉ® */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background-color: #FFFFFF;
  border-radius: 0 0 48rpx 48rpx;
  margin-bottom: 32rpx;
  box-sizing: border-box;
}

.title-section {
  flex: 1;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 24rpx;
}

.date-selector {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #F7F7F5;
  border-radius: 32rpx;
}

.date-text {
  font-size: 24rpx;
  font-weight: 500;
  margin-right: 8rpx;
}

/* Êï∞ÊçÆÊ¶ÇËßà */
.data-overview {
  display: flex;
  gap: 16rpx;
  padding: 0 32rpx;
  margin-bottom: 32rpx;
  box-sizing: border-box;
}

.overview-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  position: relative;
}

.card-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
  font-size: 32rpx;
  color: #FFFFFF;
}

.card-content {
  text-align: center;
  margin-bottom: 8rpx;
}

.card-value {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.card-label {
  font-size: 20rpx;
}

.card-trend {
  display: flex;
  align-items: center;
  font-size: 20rpx;
}

.card-trend.up {
  color: #4CAF50;
}

.card-trend.down {
  color: #F44336;
}

.card-trend.stable {
  color: #7D7D7B;
}

.trend-text {
  margin-left: 4rpx;
}

/* ‰∏ªË¶ÅÂÜÖÂÆπ */
.main-content {
  flex: 1;
  padding: 0 32rpx 120rpx;
  box-sizing: border-box;
}

/* Êï∞ÊçÆÂàÜÁªÑ */
.data-section {
  margin-bottom: 48rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
}

.time-filter {
  display: flex;
  background-color: #FFFFFF;
  border-radius: 32rpx;
  padding: 4rpx;
}

.filter-item {
  padding: 8rpx 24rpx;
  border-radius: 28rpx;
  font-size: 24rpx;
  color: #7D7D7B;
  transition: all 0.3s ease;
}

.filter-item.active {
  background-color: #FE5933;
  color: #FFFFFF;
}

.view-all {
  font-size: 24rpx;
}

/* ÂõæË°®ÂÆπÂô® */
.chart-container {
  padding: 32rpx;
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.chart-title {
  font-size: 28rpx;
  font-weight: 500;
}

.chart-period {
  font-size: 20rpx;
}

.chart-area {
  height: 400rpx;
}

.chart-bars {
  display: flex;
  align-items: flex-end;
  height: 100%;
  gap: 16rpx;
}

.chart-bar {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}

.bar-fill {
  width: 100%;
  border-radius: 8rpx 8rpx 0 0;
  transition: height 0.3s ease;
}

.bar-label {
  margin-top: 8rpx;
  font-size: 20rpx;
  text-align: center;
}

/* ÂÅ•Â∫∑ÊåáÊ†á */
.health-metrics {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.metric-card {
  padding: 32rpx;
}

.metric-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.metric-info {
  flex: 1;
}

.metric-name {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.metric-value {
  font-size: 32rpx;
  font-weight: 600;
}

.metric-status {
  padding: 8rpx 24rpx;
  border-radius: 32rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.status-text {
  font-size: 20rpx;
}

.metric-progress {
  margin-bottom: 16rpx;
}

.progress-bar {
  height: 8rpx;
  background-color: #F0F0F0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill {
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-labels {
  display: flex;
  justify-content: space-between;
  font-size: 20rpx;
}

.metric-description {
  font-size: 24rpx;
  line-height: 1.4;
}

/* Ê¥ªÂä®Êó∂Èó¥Á∫ø */
.activity-timeline {
  position: relative;
}

.timeline-item {
  display: flex;
  margin-bottom: 32rpx;
  position: relative;
}

.timeline-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  margin-top: 8rpx;
  flex-shrink: 0;
  z-index: 2;
}

.timeline-line {
  position: absolute;
  left: 12rpx;
  top: 32rpx;
  width: 2rpx;
  height: calc(100% - 8rpx);
  background-color: #E0E0E0;
  z-index: 1;
}

.timeline-content {
  flex: 1;
  background-color: #FFFFFF;
  padding: 24rpx;
  border-radius: 24rpx;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.activity-title {
  font-size: 28rpx;
  font-weight: 500;
}

.activity-time {
  font-size: 20rpx;
}

.activity-description {
  display: block;
  font-size: 24rpx;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.activity-data {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.data-item {
  padding: 4rpx 12rpx;
  background-color: #F7F7F5;
  border-radius: 16rpx;
  font-size: 20rpx;
}

/* ÊàêÂ∞±Â±ïÁ§∫ */
.achievements {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.achievement-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
}

.achievement-badge {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  font-size: 32rpx;
  color: #FFFFFF;
}

.achievement-info {
  flex: 1;
}

.achievement-name {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.achievement-date {
  font-size: 20rpx;
}

/* ÊÇ¨ÊµÆÊåâÈíÆ */
.fab {
  position: fixed;
  right: 32rpx;
  bottom: 120rpx;
  width: 112rpx;
  height: 112rpx;
  background-color: #FE5933;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(254, 89, 51, 0.3);
  z-index: 100;
}

.fab .iconfont {
  font-size: 48rpx;
  color: #FFFFFF;
}

/* Êó•ÊúüÈÄâÊã©Âô® */
.picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

