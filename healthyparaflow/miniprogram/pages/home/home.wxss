/* pages/home/home.wxss */
.container {
  min-height: 100vh;
  background-color: #F7F7F5;
  max-width: 100vw;
  overflow-x: hidden;
  box-sizing: border-box;
}

/* 状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  color: #302E2D;
}

.status-icons {
  display: flex;
  gap: 12rpx;
  font-size: 24rpx;
}

/* 头部信息 */
.header {
  padding: 16rpx 32rpx 32rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.user-details {
  flex: 1;
}

.username {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #302E2D;
  margin-bottom: 8rpx;
}

.pet-info {
  display: flex;
  align-items: center;
}

.pet-name {
  font-size: 24rpx;
  color: #7D7D7B;
  margin-right: 16rpx;
}

.pet-mood {
  padding: 4rpx 16rpx;
  border-radius: 50rpx;
  font-size: 20rpx;
  font-weight: 500;
  color: #302E2D;
}

/* 主要内容 */
.main-content {
  flex: 1;
  padding: 0 32rpx;
  box-sizing: border-box;
}

/* 宠物展示卡片 */
.pet-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
}

.pet-display {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 440rpx;
  margin-bottom: 32rpx;
  border-radius: 48rpx;
}

.pet-image {
  width: 320rpx;
  height: 320rpx;
  max-width: 80vw;
}

.pet-status {
  width: 100%;
}

.pet-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.pet-name-large {
  font-size: 28rpx;
  font-weight: 500;
}

.pet-stage {
  padding: 8rpx 24rpx;
  border-radius: 50rpx;
  font-size: 20rpx;
  font-weight: 500;
  color: #302E2D;
}

/* 经验值部分 */
.exp-section {
  margin-bottom: 32rpx;
}

.exp-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
  font-size: 20rpx;
}

/* 状态值 */
.status-bars {
  display: flex;
  gap: 32rpx;
}

.status-item {
  flex: 1;
}

.status-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
  font-size: 20rpx;
}

/* 任务概览 */
.task-overview {
  margin-bottom: 32rpx;
  padding: 32rpx;
  border-radius: 48rpx;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.task-title .title {
  font-size: 28rpx;
  font-weight: 500;
  display: block;
}

.task-progress {
  font-size: 20rpx;
  margin-top: 4rpx;
}

.task-icons {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.task-icon {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  border-radius: 32rpx;
}

.icon-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 8rpx;
  border-radius: 50%;
}

.icon-label {
  font-size: 20rpx;
}

.view-all-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 80rpx;
  border-radius: 48rpx;
}

.btn-text {
  margin-right: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 聊天部分 */
.chat-section {
  margin-bottom: 32rpx;
  padding: 32rpx;
  border-radius: 48rpx;
}

.chat-header {
  margin-bottom: 24rpx;
}

.chat-header .title {
  font-size: 28rpx;
  font-weight: 500;
}

.chat-preview {
  margin-bottom: 24rpx;
  padding: 24rpx;
  border-radius: 32rpx;
}

.chat-label {
  display: block;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.chat-message {
  font-size: 24rpx;
  line-height: 1.5;
}

.chat-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 80rpx;
  border-radius: 48rpx;
}

.chat-btn .iconfont {
  margin-right: 16rpx;
  color: #FFFFFF;
}

/* 图标字体 */
.iconfont {
  font-family: 'iconfont';
}

.icon-signal::before { content: '📶'; }
.icon-wifi::before { content: '📶'; }
.icon-battery::before { content: '🔋'; }
.icon-walking::before { content: '🚶'; }
.icon-apple::before { content: '🍎'; }
.icon-moon::before { content: '🌙'; }
.icon-message::before { content: '💬'; }
.icon-arrow-right::before { content: '→'; }