/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background-color: #F7F7F5;
  padding: 32rpx;
  max-width: 100vw;
  overflow-x: hidden;
  box-sizing: border-box;
}

/* 用户信息卡片 */
.user-card {
  margin-bottom: 32rpx;
  padding: 32rpx;
}

.user-header {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.user-id {
  display: block;
  font-size: 24rpx;
  margin-bottom: 16rpx;
}

.user-level {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.level-text {
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.exp-text {
  font-size: 20rpx;
}

.edit-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #F7F7F5;
  border-radius: 50%;
}

/* 宠物信息 */
.pet-section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
}

.add-pet {
  font-size: 24rpx;
}

.pet-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.pet-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
}

.pet-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.pet-info {
  flex: 1;
}

.pet-name {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.pet-type {
  display: block;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.pet-stats {
  display: flex;
  gap: 16rpx;
}

.stat-item {
  font-size: 20rpx;
}

.pet-status {
  padding: 8rpx 24rpx;
  border-radius: 32rpx;
  background-color: #F7F7F5;
  transition: all 0.3s ease;
}

.pet-status.active {
  background-color: #FE5933;
}

.status-text {
  font-size: 20rpx;
  color: #7D7D7B;
}

.pet-status.active .status-text {
  color: #FFFFFF;
}

/* 功能菜单 */
.menu-section {
  margin-bottom: 32rpx;
}

.menu-group {
  background-color: #FFFFFF;
  border-radius: 24rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  margin-right: 24rpx;
  font-size: 32rpx;
  color: #FFFFFF;
}

.menu-content {
  flex: 1;
}

.menu-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.menu-desc {
  font-size: 24rpx;
  line-height: 1.4;
}

/* 统计信息 */
.stats-section {
  margin-bottom: 32rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.stat-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 16rpx;
  text-align: center;
}

.stat-icon {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  margin-bottom: 16rpx;
  font-size: 32rpx;
  color: #FFFFFF;
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 32rpx 0;
}

.version-text {
  font-size: 20rpx;
}

/* 背景色类 */
.bg-blue {
  background-color: #2196F3;
}

.bg-yellow {
  background-color: #FFDA6E;
}

.bg-green {
  background-color: #4CAF50;
}

.bg-purple {
  background-color: #9C27B0;
}

.bg-orange {
  background-color: #FF9800;
}

.bg-red {
  background-color: #F44336;
}

/* 图标字体 */
.iconfont {
  font-family: 'iconfont';
}

.icon-edit::before { content: '✏️'; }
.icon-chart::before { content: '📊'; }
.icon-trophy::before { content: '🏆'; }
.icon-bell::before { content: '🔔'; }
.icon-settings::before { content: '⚙️'; }
.icon-help::before { content: '❓'; }
.icon-feedback::before { content: '💬'; }
.icon-arrow-right::before { content: '→'; }
.icon-heart::before { content: '❤️'; }
.icon-target::before { content: '🎯'; }
.icon-star::before { content: '⭐'; }
.icon-calendar::before { content: '📅'; }