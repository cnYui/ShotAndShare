  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

/* 深色主题编辑弹窗样式 */
.dark-theme .edit-data-modal {
  background: rgba(0, 0, 0, 0.7);
}

.dark-theme .edit-modal-content {
  background: #2c3e50;
}

.dark-theme .edit-modal-title {
  color: #ffffff;
}

.dark-theme .edit-form-group {
  border-bottom-color: #555555;
}

.dark-theme .edit-label {
  color: #ffffff;
}

.dark-theme .edit-input {
  background: rgba(60, 60, 60, 0.8);
  color: #ffffff;
  border-color: #666666;
}

.dark-theme .edit-input::placeholder {
  color: #999999;
}

.dark-theme .edit-buttons {
  border-top-color: #555555;
}

.dark-theme .edit-cancel-btn {
  background: #7f8c8d;
  color: #ffffff;
}

.dark-theme .edit-confirm-btn {
  background: #e67e22;
  color: #ffffff;
}

.dark-theme .edit-cancel-btn:active {
  background: #6c7b7d;
}

.dark-theme .edit-confirm-btn:active {
  background: #d35400;
}

.data-input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
}

/* 其他可编辑元素样式 */
.water-current.editable,
.time-value.editable,
.summary-value.editable {
  cursor: pointer;
  position: relative;
  padding: 5rpx 10rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.water-current.editable:hover,
.time-value.editable:hover,
.summary-value.editable:hover {
  background: rgba(255, 159, 85, 0.1);
  transform: scale(1.05);
}

.water-current.editable::after,
.time-value.editable::after,
.summary-value.editable::after {
  content: '✏️';
  font-size: 20rpx;
  margin-left: 8rpx;
  opacity: 0.6;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .modal-content {
    width: 90%;
    max-width: 600rpx;
  }
  
  .overview-stats {
    grid-template-columns: 1fr;
    gap: 15rpx;
  }
  
  .data-actions {
    flex-direction: column;
  }
}