  height: 200rpx;
  border-radius: 50%;
  border: 6rpx solid #ffffff;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.pet-level {
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  background: #FF9F55;
  color: white;
  padding: 6rpx 12rpx;
