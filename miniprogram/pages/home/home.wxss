  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF9F55;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 互动按钮区域 */
