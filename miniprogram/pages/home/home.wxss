  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  color: #333;
  background: #fafafa;
  box-sizing: border-box;
}

.name-input:focus {
  border-color: #4CAF50;
  background: white;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  height: 100rpx;
  border: none;
  font-size: 32rpx;
  background: none;
  border-radius: 0;
}

.cancel-btn {
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.confirm-btn {
  color: #4CAF50;
  font-weight: 600;
}

.cancel-btn:active {
  background: #f5f5f5;
}

.confirm-btn:active {
  background: #f0f8f0;
}

/* 暗色主题下的模态框样式 */
.dark .modal-content {
  background: #2d2d2d;
}

.dark .modal-title {
  color: #fff;
}

.dark .modal-header,
.dark .modal-footer {
  border-color: #404040;
}

.dark .name-input {
  background: #404040;
  border-color: #555;
  color: #fff;
}

.dark .name-input:focus {
  background: #4a4a4a;
  border-color: #4CAF50;
}

.dark .cancel-btn {
  color: #ccc;
  border-color: #404040;
}

.dark .cancel-btn:active {
  background: #404040;
}

.dark .confirm-btn:active {
  background: #2d4a2d;
}