  margin-bottom: 30rpx;
}

.action-buttons {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  gap: 20rpx;
}

.action-btn {
  flex: 0 0 calc(33.33% - 14rpx);
  min-width: 140rpx;
  background: rgba(255, 255, 255, 0.9);
  border: none;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  margin-bottom: 20rpx;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.95);
}

