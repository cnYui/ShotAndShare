/* 测试蛋破碎动画页面样式 */
.test-container {
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255,255,255,0.8);
  text-shadow: 0 1rpx 2rpx rgba(0,0,0,0.3);
}

.pet-display {
  background: rgba(255,255,255,0.9);
  border-radius: 30rpx;
  padding: 60rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.2);
  backdrop-filter: blur(10rpx);
}

.controls {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 15rpx;
  margin-bottom: 60rpx;
  width: 100%;
  max-width: 700rpx;
}

.control-btn {
  background: rgba(255,255,255,0.9);
  color: #667eea;
  border: none;
  border-radius: 40rpx;
  padding: 20rpx 24rpx;
  font-size: 26rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.15);
  transition: all 0.3s ease;
  white-space: nowrap;
}

.control-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.2);
}

.info {
  background: rgba(255,255,255,0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  width: 100%;
  max-width: 500rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255,255,255,0.2);
}

.info-text {
  display: block;
  color: white;
  font-size: 28rpx;
  margin-bottom: 10rpx;
  text-shadow: 0 1rpx 2rpx rgba(0,0,0,0.3);
}

.info-text:last-child {
  margin-bottom: 0;
}

.instructions {
  background: rgba(255,255,255,0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  width: 100%;
  max-width: 500rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255,255,255,0.2);
}

.instruction-title {
  display: block;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-shadow: 0 1rpx 2rpx rgba(0,0,0,0.3);
}

.instruction-item {
  display: block;
  color: rgba(255,255,255,0.9);
  font-size: 26rpx;
  margin-bottom: 12rpx;
  padding-left: 20rpx;
  text-shadow: 0 1rpx 2rpx rgba(0,0,0,0.3);
}

.instruction-item:last-child {
  margin-bottom: 0;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .test-container {
    padding: 30rpx 20rpx;
  }
  
  .title {
    font-size: 40rpx;
  }
  
  .pet-display {
    padding: 40rpx;
  }
  
  .control-btn {
    font-size: 28rpx;
    padding: 20rpx 32rpx;
  }
}